package MyAssingment2;
import java.util.Scanner;
public class pattern4 {


	public static void main(String[] args) {
		
        Scanner sc=new Scanner(System.in);
        
        int n=sc.nextInt();		//taking n's value from System..
        int i=1;
        int k;	//sapces
        
        while(i<=n)		//printing lines...
        {
           int s=1;
            while(s<=n-i)	//printing spaces...
            {
                System.out.print(" ");
                s++;
            }
            
            int j=1;
            		
            	
            while(j<=i)
            {
                System.out.print("*");
                j++;
               
            }
            
            j=2;
            while(j<=i)
            {
                System.out.print("*");
                j++;
            }
            System.out.println();	//printing new liens...
            i++;
            
        }
		
	}

}
